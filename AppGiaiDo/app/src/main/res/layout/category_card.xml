<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/category_card">

    <View
        android:id="@+id/cat_card_icon"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@drawable/mathematical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cat_card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intervogue_bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Title" />

        <TextView
            android:id="@+id/cat_card_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intervogue_regular"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:layout_marginTop="5sp"
            android:text="12 câu hỏi" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/cat_card_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:progress="50"
        android:progressDrawable="@drawable/progress_bar_blue"
        android:layout_marginTop="10sp"
        android:progressTint="#4AC7FF" />
</LinearLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_primary</item>
        <item name="colorPrimaryDark">@color/text_primary</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_secondary</item>
        <item name="colorSecondaryVariant">@color/text_secondary</item>
        <item name="colorOnSecondary">@color/text_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/intervogue_regular</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/button_green_enabled</item>
        <item name="android:fontFamily">@font/intervogue_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:text">Button</item>
        <item name="android:layout_height">60dp</item>
    </style>
</resources>